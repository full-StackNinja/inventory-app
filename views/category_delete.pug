extends layout

block content
  
  h1=category.name
  if category_items.length
    p #[em Delete following items before deleting this category:]
    ul
      for item in category_items
        li
          a(href=item.url) #{item.name}
  
  else
    p Do you want to delete this category?

    form(method='post')
      button.btn.btn-primary(type='submit') Delete