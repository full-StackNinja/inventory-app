extends layout

block content
  h1 #{item.name}
  p Category: 
    a(href=item.category.url) #{item.category.name} 
  p(style="margin-top:30px;") #[strong Description:] #{item.description}
  p #[strong Price:] $#{item.price}
  p #[strong Quantity:] #{item.stock}

  hr
  p
    a(href=item.url + "/update") Update item
  p 
    a(href=item.url + "/delete") Delete item
    